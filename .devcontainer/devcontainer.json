{
  "name": "Ansible Dev Podman",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "redhat.ansible",
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens"
      ]
    }
  },
  "runArgs": [
    "--privileged"
  ],
  "mounts": [
    "source=/run/user/1000/podman/podman.sock,target=/run/podman/podman.sock,type=bind"
  ],
  "remoteEnv": {
    "CONTAINER_HOST": "unix:///run/podman/podman.sock",
    "CONTAINER_STORAGE_DRIVER": "vfs"
  },
  "remoteUser": "vscode"
}
